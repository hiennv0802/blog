<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :title, placeholder: "Compose a new title...", class: 'textTitle' %>
    <%= f.text_area :body, placeholder: "Compose a new body content..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
